<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/linklist_item_tv"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:textAppearance="?android:textAppearanceSmall"
        android:gravity="center_vertical"
        android:paddingTop="8dp"
        android:textSize="16sp"
        android:paddingRight="16dp"
        android:paddingLeft="16dp"
        android:text="Hello"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/linklist_item_iv_edit" />

    <ImageView
        android:src="@mipmap/ic_delete_black_24dp"
        android:id="@+id/linklist_item_iv_delete"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginTop="13dp"
        android:layout_marginRight="13dp"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:src="@mipmap/ic_mode_edit_black_24dp"
        android:id="@+id/linklist_item_iv_edit"
        android:layout_marginRight="5dp"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_alignTop="@+id/linklist_item_iv_delete"
        android:layout_toStartOf="@+id/linklist_item_iv_delete" />

</RelativeLayout>