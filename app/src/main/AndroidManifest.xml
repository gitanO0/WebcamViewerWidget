<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.appphil.webcamviewerwidget">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".LinkListActivity" />

        <receiver android:name="WVWidgetProvider" >
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>
            <meta-data android:name="android.appwidget.provider"
                android:resource="@xml/wvwidgetproviderinfo" />
        </receiver>

        <activity android:name=".ViewImageActivity" />

        <service
            android:name=".services.WidgetUpdateService"
            android:exported="false"/>
        <service
            android:name=".services.WidgetSwitchLinkService"
            android:exported="false"/>

     </application>

</manifest>